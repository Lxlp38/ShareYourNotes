<%= render "layouts/header" %>

<!--<p id="notice"><%= notice %></p>-->

<h1 class="mt-5 mx-5"> Ticket details page </h1>
<div class="mx-5 p-5 rounded border shadow bg-body">
    <h3 class="bt-dashed w-100"> Ticket details: </h3>
    <% @user = User.find(@ticket.user_id) %>
    <br>
    <strong>Ticket id:</strong><%= @ticket.id %>

    <h3 class="bt-dashed w-100"> Subject: </h3>
    <h1> <%= @ticket.subject %> </h1>

    <h3 class="bt-dashed w-100"> Details: </h3>
    <p> <%= @ticket.text %> </p>
    <% if current_user.has_role?(:admin) %>
    <%= button_to 'Destroy', @note_report, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%>
    <%end%>
    </div>

<div class="m-5">
  <% if current_user.has_role?(:admin) %>
    
    <%= link_to 'Back', tickets_path, class: "btn btn-primary"%>
  <% else %>
    <%= link_to 'Back', note_path, class: "btn btn-primary"%>
  <% end %>
</div>

<%= render "layouts/footer" %>