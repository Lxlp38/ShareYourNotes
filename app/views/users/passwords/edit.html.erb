<div class="container d-flex align-items-center justify-content-center text-center login-bg">
    <div class="row w-50 p-5">

      <h1 class="cedarville-cursive-regular mb-5">ShareYourNotes</h1>

      <h2 class="mb-3 text-primary">Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group my-3">
          <label class="form-label">Password:</label>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.text_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="form-group my-3">
          <label class="form-label">Confirm new password:</label>
          <%= f.text_field :password_confirmation, autofocus: true, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-outline-info w-100 my-2" %>
        </div>
      <% end %>

      <%- if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class:"text-secondary fst-lighter text-decoration-none my-2" %>
      <% end %>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"text-secondary fst-lighter text-decoration-none my-2" %>
      <% end %>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class:"text-secondary fst-lighter text-decoration-none my-2" %>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-secondary fst-lighter text-decoration-none my-2" %>
      <% end %>

      <span type="button" class="text-secondary fst-lighter text-decoration-none my-2" data-bs-toggle="modal" data-bs-target="#appInfoModal">
        About the website
      </span>

      <%= link_to "Visit as a Guest", notes_path, class:"text-secondary fst-lighter text-decoration-none my-2" %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class:"text-secondary fst-lighter text-decoration-none my-2" %>
      <% end %>

      <%= render "users/shared/app_info" %> 

  </div>
</div>
